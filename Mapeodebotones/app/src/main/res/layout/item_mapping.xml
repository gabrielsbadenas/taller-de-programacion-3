<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_package_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTintMode="add"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_kind_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kindName"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/item_controller_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_kind"
            app:layout_constraintTop_toBottomOf="@+id/item_type_name" />

        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="type"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/item_kind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_controller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="controllerName"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_controller"
            app:layout_constraintTop_toBottomOf="@+id/item_kind_name" />

        <TextView
            android:id="@+id/item_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="controller:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_kind" />

        <TextView
            android:id="@+id/item_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="kind"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/item_controller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_type" />

        <TextView
            android:id="@+id/item_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="typeName"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/item_kind_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_type"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonItem"
            android:layout_width="219dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:text="open"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>