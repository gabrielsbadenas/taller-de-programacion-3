<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_package_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTintMode="add"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepe"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_name_item5"
            app:layout_constraintEnd_toStartOf="@+id/txt_name_item4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepe"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txt_name_item6"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_item3" />

        <TextView
            android:id="@+id/txt_name_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepe"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_name_item2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txt_name_item4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepe"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_name_item6"
            app:layout_constraintEnd_toStartOf="@+id/txt_name_item3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txt_name_item"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name_item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepe"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_name_item6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_item" />

        <TextView
            android:id="@+id/txt_name_item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepe"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_name_item2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txt_name_item5"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_item4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>