<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_package_item_generic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTintMode="add"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="142dp">

        <TextView
            android:id="@+id/item_kind_name_generic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kindName"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_kind_generic"
            app:layout_constraintTop_toBottomOf="@+id/item_type_name_generic" />

        <TextView
            android:id="@+id/item_type_generic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/item_kind_generic"
            app:layout_constraintEnd_toStartOf="@+id/item_type_name_generic"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_kind_generic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kind"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_kind_name_generic"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_type_generic" />

        <TextView
            android:id="@+id/item_type_name_generic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="typeName"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/item_kind_name_generic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_type_generic"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>